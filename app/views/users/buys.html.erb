<%= render "usermenu", :locals => {:option => 1 }%>
<div class = "row">
<div class="col-md-3">
  <%=render "userprofile" %>
</div>
<div class="col-md-9">
  <div class="panel panel-primary">
    <div class = "panel-heading">
      <h3 class= "menu-title"><i>Tus compras</i></h3>
    </div>
    <div class = "panel-body">
      <table class="table table-striped">
      <% @user.buys.each do |buy| %>
      <tr>
        <td width="10%">
          <img class = "round-image-100" src= <%= buy.item.avatar.url(:thumb) %>>
        </td>
        <td width="50%" id= <%= buy.id %>>
                              <!-- Modal Payment-->
                <div class="modal fade payment"  tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel"><img class = "round-image-50" src= <%= buy.item.avatar.url(:thumb) %>> <%= buy.item.title %></h4>
                      </div>
                      <div class="modal-body">
                        <ul>
                          <li><strong>Forma de Pago:</strong> <%= buy.item.form_of_payment %></li>
                          <li><strong>Cuenta:</strong> <%= buy.item.payment_details %></li>
                        </ul>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- Fin Modal -->
                <!-- Modal Scores-->
                <div class="modal fade scores"  tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <form role="search" method="post" action="/scores">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                          <h4 class="modal-title" id="myModalLabel"><img class = "round-image-50" src= <%= buy.item.user.avatar.url(:thumb) %>> Votar a <%= buy.item.user.username %></h4>
                        </div>
                        <div class="modal-body">
                          <div class="form-group">
                            <label class="radio-inline">
                              <input type="radio" name="score" id="inlineRadio1" value=1> 1
                            </label>
                            <label class="radio-inline">
                              <input type="radio" name="score" id="inlineRadio2" value=2> 2
                            </label>
                            <label class="radio-inline">
                              <input type="radio" name="score" id="inlineRadio3" value=3> 3
                            </label>
                            <label class="radio-inline">
                              <input type="radio" name="score" id="inlineRadio4" value=4> 4
                            </label>
                            <label class="radio-inline">
                              <input type="radio" name="score" id="inlineRadio5" value=5> 5
                            </label><br>
                            <input type="text" class="form-control" name="description" placeholder="Cuentanos quÃ© tal fue la compra">
                            <input type="hidden" value="<%= form_authenticity_token() %>" name="authenticity_token">
                            <input type="hidden" value= <%= buy.item.user_id %> name="user_id">
                            <input type="hidden" value= <%= buy.id %> name="buy_id">
                          </div>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                          <button type="submit" class="btn btn-default">Buscar</button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
                <!-- Fin Modal -->
          <h4><%= link_to( buy.item.title , item_path(buy.item.id)) %></h4>
            <% if buy.item.open_to_apply == true %>
              <span class="label label-default">Aceptando compradores</span>
            <% end %>
            <% if buy.item.open_to_pay == true %>
              <span class="label label-success">Aceptando pagos</span>
              <span class="label label-success payment-sent <% if buy.payment_sent == false %> hidden <% end %> ">Pago Enviado</span>
                <% if buy.payment_received == true %>
                <span class="label label-success">Pago Recibido</span>
              <% end %>
            <% end %>
            <% if buy.item.open_to_send == true %>
              <span class="label label-success">Realizando envios</span>
              <% if buy.item_sent == true %>
                <span class="label label-success">Articulo Enviado</span>
              <% end %>
              <span class="label label-success item-received <% if buy.item_received == false %> hidden <% end %> ">Articulo Recibido</span>
            <% end %>
            <% if buy.item.all_sent == true %>
              <span class="label label-success">Compra Enviada</span>
            <% end %>
            <% if buy.item.closed_status == true %>
              <span class="label label-danger">Venta Cerrada</span>
            <% end %>    
        </td>
        <td width="40%">
        <div class="btn-group pull-right" role="group" aria-label="...">
        <% if buy.item.open_to_pay == true %>
          <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#<%= buy.id %> .modal.payment" >Forma de Pago</button>
          <a href="#" class="btn btn-default btn-sm payment-send-btn" id= <%= buy.id %> >Enviar Pago</a>
        <% end %>
        <% if buy.item.open_to_send == true %>
          <a href="#" class="btn btn-default btn-sm item-confirm-btn" id= <%= buy.id %> >Articulo Recibido</a>
        <% end %>
        <% if (buy.item.all_sent == true) && (buy.is_voted? == false) %>
           <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#<%= buy.id %> .modal.scores" >Puntuar Vendedor</button>
        <% end %>
          <%= link_to 'Contactar', new_message_path(from: current_user.id, user_id: buy.item.user_id, subject: buy.item.title), class: 'btn btn-default btn-sm' %>

          <%= link_to 'Eliminar', buy_path(buy.id), :method => 'delete', class: 'btn btn-default btn-sm',:data => {:confirm => 'Deseas salir de esta compra?'} %>
        </div>
        </td>
      </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>
</div>