<%= render "usermenu", :locals => {:option => 2 }%>
<% flash.each do |key, value| %>
   <div class="alert alert-info alert-dismissible" role="alert">
       <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
       <ul class="list-unstyled">
        <li class="text-center">
          <%= value %>
        </li>
      </ul>
  </div>
<% end %>
<div class = "row">
<div class="col-md-3">
  <%=render "userprofile" %>
</div>
<div class="col-md-9">
  <div class="panel panel-primary">
    <div class = "panel-heading">
      <h3 class= "menu-title"><i>Tus mensajes</i></h3>
    </div>
    <div class = "panel-body">
      <table class="table table-striped">
      <th width = "20%">Recibido</th>
      <th width = "70%">Asunto</th>
      <th></th>
      <% @user.messages.each do |message| %>
      <tr>
        <td>
          <% if message.read == false %>
          	<span class='unread_message'>
          <% end %>
          <%= message.created_at %>
          <% if message.read == false %>
          	</span>
          <% end %>
        </td>
        <td>
          <% if message.read == false %>
          	<span class='unread_message'>
          <% end %>
          <%= message.subject %>
          <% if message.read == false %>
          	</span>
          <% end %>
        </td>
        <td>
        <div class="btn-group pull-right" role="group" aria-label="...">
        	<%= button_to 'Leer', message_path(message.id), :method => 'get', class: 'btn btn-default btn-sm' %>
        	<%= button_to 'Borrar', message_path(message.id), :method => 'delete', class: 'btn btn-default btn-sm'%>
        </div>
        </td>
      </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>
</div>