<div class = "row">
<div class="col-md-3">
  <%=render "userprofile" %>
</div>
<div class="col-md-9">
  <div class="panel panel-primary">
    <div class = "panel-heading">
      <h3 class= "menu-title"><i>Tus mensajes</i></h3>
    </div>
    <div class = "panel-body">
      <table class="table table-striped">
      <th width = "20%">Recibido</th>
      <th width = "60%">Asunto</th>
      <th></th>
      <% @user.messages.each do |message| %>
      <tr>
        <td>
          <% if message.read == false %>
          	<span class='unread_message'>
          <% end %>
          <%= message.created_at %>
          <% if message.read == false %>
          	</span>
          <% end %>
        </td>
        <td>
          <% if message.read == false %>
          	<span class='unread_message'>
          <% end %>
          <%= message.subject %>
          <% if message.read == false %>
          	</span>
          <% end %>
        </td>
        <td>
        <div class="btn-group pull-right" role="group" aria-label="...">

          <%= link_to message_path(message.id),
                    'data-toggle' =>"tooltip",
                    'data-original-title' => "Leer",
                    'data-placement' => 'auto top' do%>
                <span class="glyphicon glyphicon-eye-open"></span>
          <% end %>

          <%= link_to message_path(message.id), :method => 'delete', :data => {:confirm => 'Deseas eliminar el mensaje?'},
                    'data-toggle' =>"tooltip",
                    'data-original-title' => "Eliminar",
                    'data-placement' => 'auto top' do%>
                <span class="glyphicon glyphicon-trash"></span>
          <% end %>
        </div>
        </td>
      </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>
</div>