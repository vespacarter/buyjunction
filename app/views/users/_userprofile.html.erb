  <div class="panel panel-primary">
    <div class = "panel-heading">
      <div class = "row">
        <div class = "col-md-8">
          <h2 class= "menu-title"><i><%= current_user.username %></i></h2>
        </div>
        <div class = "col-md-4">
          <%= link_to  edit_user_registration_path, :action => 'get', :method => 'get', class: ' pull-right btn-edit-user', 
                    'data-toggle' =>"tooltip",
                    'data-original-title' => "Editar perfil",
                    'data-placement' => 'auto top' do%>
            <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
        </div>
      </div>      
    </div>
    <div class = "panel-body">

    <p>
    <center>
      <img class = "round-user-avatar-medium" src= <%= current_user.avatar.url(:medium) %> >
    </center>
    </p>
      <ul>
        <li><strong>Email:</strong> <%= current_user.email %></li>
        <li><strong>Nombre:</strong> <%= current_user.fullname %></li>
        <li><strong>Direccion:</strong> <%= current_user.address %> <%= current_user.city %> <%= current_user.state %> <%= current_user.zipcode %></li>
        <li><strong>Tus votos: </strong><a href="#" data-toggle="modal" data-target=".modal.showscores"><%= current_user.calculate_score %></a></li>
      </ul>
    </div>
  </div>
      <!-- Modal Scores-->
<div class="modal fade showscores"  tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"><img class = "round-image-50" src= <%= current_user.avatar.url(:thumb) %>> Votaciones a <%= current_user.username %></h4>
      </div>
      <div class="modal-body">
        <table class="table table-striped">
          <% current_user.scores.each do |score| %>
            <tr>
              <td><%= score.description %> </td><td><%= score.score %></td>
            </tr>
          <% end %>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>
