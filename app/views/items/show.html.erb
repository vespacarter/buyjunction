<% if user_signed_in? %>
<% if @item.user_id == current_user.id %>
	<ul class="nav nav-pills">
 		<li role="presentation" class="active"><a href= <%= item_path %> >Vista</a></li>
  		<li role="presentation"><a href= <%= edit_item_path %> >Editar</a></li>
  		<li role="presentation"><a href= <%= userlist_path %> >Gestionar Compradores</a></li>
  		<li role="presentation"><a href="#">Acciones Generales</a></li>
	</ul>
<% end %>
<% end %>
<div class = "row">
<div class="col-md-4">
<p><img class = "img-responsive round-image-full" src =  <%= @item.avatar.url(:big)%> ></p>
<h2><%= @item.title %></h2>
<ul>
<li>Inicia la venta: <%= @owner.username %> </li>
<li>Fabricante: <a href= <%= @item.seller_url %> target = '_blank'><%= @item.seller %></a></li>
<li>Precio: <%= @item.prize %>€</li>
<li>Pedido minimo: <%= @item.min_units %></li>
<li>Nº de compradores: <%= @item.number_of_buyers %></li>
<li>Vence el: <%= @item.expiration_date %></li>
</ul>
</div>
<div class="col-md-8">
<% if user_signed_in? %>
<div><p><%= button_to 'Apuntarse a esta compra', buys_path, :action => 'create', params:{ item_id: @item.id}, :method => 'post', class: 'btn btn-success btn-sm text-capitalize btn-primary pull-right'%></p></div>
<% else %>
<div><p class = "pull-right">Necesitas iniciar sesión para apuntarte a esta compra</p></div>
<% end %>
<p><%= @item.description %></p>
</div>

