<% flash.each do |key, value| %>
   <div class="alert alert-info alert-dismissible" role="alert">
       <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
       <ul class="list-unstyled">
        <li class="text-center">
          <%= value %>
        </li>
      </ul>
  </div>
<% end %>
<div class = "row">
<div class="col-md-3">
  <div class="panel panel-primary">
    <div class = "panel-heading">
      <div class = "row">
        <div class = "col-md-8">
          <h2 class= "menu-title"><i><%= current_user.username %></i></h2>
        </div>
        <div class = "col-md-4">
         <%= link_to 'Editar', edit_user_registration_path, :action => 'get', :method => 'get', class: 'btn btn-default btn-sm pull-right btn-edit-user'%>
        </div>
      </div>      
    </div>
    <div class = "panel-body">
    <p>
    <center>
      <img class = "round-user-avatar-medium" src= <%= current_user.avatar.url(:medium) %> >
    </center>
    </p>
      <ul>
        <li><strong>Email:</strong> <%= current_user.email %></li>
        <li><strong>Nombre:</strong> <%= current_user.fullname %></li>
        <li><strong>Direccion:</strong> <%= current_user.address %> <%= current_user.city %> <%= current_user.state %> <%= current_user.zipcode %></li>
      </ul>
    </div>
  </div>
</div>
<div class="col-md-9">
  <div class="panel panel-primary">
    <div class = "panel-heading">
      <h3 class= "menu-title"><i>Nuevo Mensaje</i></h3>
    </div>
    <div class = "panel-body">
    <%= form_for(@message) do |f| %>
      <div class="field">
        <%= f.label 'De: ' + @from.username %><br />
        <%= f.label 'Para: ' + @to.username %><br />
        <%= f.label 'Asunto: ' + @message.subject %><br />
      </div>
      <div class="field">
        <%= f.label 'Mensaje:' %><br />
        <%= f.cktext_area :body, :ckeditor => {:uiColor => '#8DBD0C', :toolbar => 'mini'} %>
        <%= f.hidden_field :user_id, :value => @to.id %>
        <%= f.hidden_field :from, :value => @from.id %>
        <%= f.hidden_field :subject, :value => @message.subject %>
      </div>
      &nbsp
      <div class="actions">
        <%= f.submit "Enviar" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
</div>






